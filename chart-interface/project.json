{
  "name": "chart-interface",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "chart-interface/src",
  "prefix": "angular-charts",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "chart-interface/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "chart-interface/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "chart-interface/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "chart-interface/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "chart-interface/**/*.ts",
          "chart-interface/**/*.html"
        ]
      }
    }
  },
  "tags": ["interface"]
}
